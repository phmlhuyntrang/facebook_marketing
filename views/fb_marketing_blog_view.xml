<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marketing_blog_form" model="ir.ui.view">
        <field name="name">marketing.blog.form</field>
        <field name="model">marketing.blog</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="blog" options="{'no_create': True}"/>
                        <field name="blog_title"/>
                        <field name="image" widget="image"/>
                        <!-- <field name="link"/> -->
                        <field name="include_link"/>
                    </group>
                    <notebook style="width:3000px;">
                        <page string="Posts">
                            <field name="post_ids">
                                <tree>
                                    <field name="page_id"/>
                                    <field name="comment"/>
                                    <field name="schedule_post"/>
                                    <field name="remind_time"/>
                                    <field name="post_id" />
                                    <field name="post_url" widget="url" />
                                    <field name="state" />
                                    <button name="post_blog_to_facebook" string="Post to Facebook" type="object" class="oe_highlight"/>
                                    <button name="post_comment_to_facebook" type="object" string="Post Comment" class="oe_highlight"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_marketing_post_tree" model="ir.ui.view">
        <field name="name">marketing.blog.tree</field>
        <field name="model">marketing.blog</field>
        <field name="arch" type="xml">
            <tree string="Marketing Blogs">
                <!-- <field name="account_ids"  widget="many2many_tags"/> -->
                <!-- <field name="page_ids"  widget="many2many_tags"/> -->
                <field name="blog"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_marketing_blog" model="ir.actions.act_window">
        <field name="name">Marketing Blogs</field>
        <field name="res_model">marketing.blog</field>
        <field name="view_mode">tree,form</field>
    </record>

    <data noupdate="0">
        <!-- Rule for Marketing Blog Post -->
        <record id="marketing_post_rule" model="ir.rule">
            <field name="name">Marketing Blog Post Rule</field>
            <field name="model_id" ref="model_marketing_blog"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Access rights for Marketing Blog Post -->
        <record id="access_marketing_post_user" model="ir.model.access">
            <field name="name">marketing.post user</field>
            <field name="model_id" ref="model_marketing_blog"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marketing_content_product_form" model="ir.ui.view">
        <field name="name">marketing.content.product.form</field>
        <field name="model">marketing.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product" options="{'no_create': True}"/>
                        <field name="content"/>
                        <field name="image" widget="image"/>
                    </group>
                    <notebook>
                        <page string="Posts">
                            <field name="post">
                                <tree>
                                    <field name="page_id"/>
                                    <field name="comment"/>
                                    <field name="schedule_post"/>
                                    <field name="remind_time"/>
                                    <field name="post_id" />
                                    <field name="post_url" widget="url" />
                                    <field name="state" />
                                    <button name="post_to_facebook" string="Post to Facebook" type="object" class="oe_highlight"/>
                                    <button name="post_comment_to_facebook" type="object" string="Post Comment" class="oe_highlight"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marketing_product" model="ir.actions.act_window">
        <field name="name">Product Marketing Content</field>
        <field name="res_model">marketing.content</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_marketing_content_product_form"/>
        <field name="domain">[('type', '=', 'product')]</field>
        <field name="context">{'default_type': 'product'}</field>
    </record>
</odoo>
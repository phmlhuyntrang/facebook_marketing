<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marketing_product_form" model="ir.ui.view">
        <field name="name">marketing.product.form</field>
        <field name="model">marketing.product</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="post_to_facebook" string="Post to Facebook" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="page_ids" widget="many2many_tags" options="{'no_create': True}" domain="[('account_id', 'in', account_ids)]"/>
                        <field name="message"/>
                        <field name="schedule_post"/>
                        <field name="remind_time"/>
                    </group>
                    <notebook>
                        <page string="Posts">
                            <field name="post_ids">
                                <tree>
                                    <field name="page_id"/>
                                    <field name="post_id"/>
                                    <field name="post_url" widget="url"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_marketing_product_tree" model="ir.ui.view">
        <field name="name">marketing.product.tree</field>
        <field name="model">marketing.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="account_ids" widget="many2many_tags">
                    <tree>
                        <field name="account_name" readonly="1"/>
                        <field name="account_avatar" readonly="1" widget="image"/>
                    </tree>
                </field>
                <field name="page_ids" widget="many2many_tags"/>
                <field name="product_id"/>
                <field name="schedule_post"/>
                <field name="remind_time"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_marketing_product" model="ir.actions.act_window">
        <field name="name">Facebook Posts</field>
        <field name="res_model">marketing.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <data noupdate="0">
        <!-- Rule for Marketing Product Post -->
        <record id="marketing_product_post_rule" model="ir.rule">
            <field name="name">Marketing Product Post Rule</field>
            <field name="model_id" ref="model_marketing_product_post"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Access rights for Marketing Product Post -->
        <record id="access_marketing_product_post_user" model="ir.model.access">
            <field name="name">marketing.product.post user</field>
            <field name="model_id" ref="model_marketing_product_post"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>

</odoo>
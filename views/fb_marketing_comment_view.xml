<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marketing_comment_tree" model="ir.ui.view">
        <field name="name">marketing.comment.tree</field>
        <field name="model">marketing.comment</field>
        <field name="arch" type="xml">
            <tree string="Marketing Comment">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_marketing_comment_form" model="ir.ui.view">
        <field name="name">marketing.comment.form</field>
        <field name="model">marketing.comment</field>
        <field name="arch" type="xml">
            <form string="Marketing Comment">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marketing_comment" model="ir.actions.act_window">
        <field name="name">Marketing Comment</field>
        <field name="res_model">marketing.comment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
<odoo>
    <record id="action_post_blog_to_facebook" model="ir.actions.server">
            <field name="name">Post to facebook</field>
            <field name="model_id" ref="model_marketing_post"/>
            <field name="state">code</field>
            <field name="code">
                    action = records.post_blog_to_facebook()
            </field>
        </record>
    
    <record id="view_marketing_post_form" model="ir.ui.view">
        <field name="name">marketing.post.form</field>
        <field name="model">marketing.post</field>
        <field name="arch" type="xml">
            <form string="Marketing Post">
                <sheet>
                    <group>
                        <field name="account"/>
                        <field name="page"/>
                        <field name="blog"/>
                    </group>
                    <button name="%(action_post_blog_to_facebook)d" type="action" string="Post to Facebook" class="btn-primary"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_marketing_post_tree" model="ir.ui.view">
        <field name="name">marketing.post.tree</field>
        <field name="model">marketing.post</field>
        <field name="arch" type="xml">
            <tree string="Marketing Posts">
                <field name="account"/>
                <field name="page"/>
                <field name="blog"/>
            </tree>
        </field>
    </record>

    <record id="action_marketing_post" model="ir.actions.act_window">
        <field name="name">Marketing Posts</field>
        <field name="res_model">marketing.post</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>